{
    "name": "porter-vscode",
    "displayName": "Porter",
    "description": "Build CNAB bundles with Porter",
    "version": "0.0.1",
    "publisher": "ms-kubernetes-tools",
    "engines": {
        "vscode": "^1.30.0"
    },
    "license": "MIT",
    "categories": [
        "Other"
    ],
    "keywords": [
        "cnab",
        "porter"
    ],
    "aiKey": "AIF-d9b70cd4-b9f9-4d70-929b-a071c400b217",
    "activationEvents": [
        "onCommand:porter.createProject",
        "onCommand:porter.build",
        "onLanguage:yaml"
    ],
    "main": "./out/extension",
    "contributes": {
        "commands": [
            {
                "command": "porter.createProject",
                "title": "Create Project",
                "category": "Porter"
            },
            {
                "command": "porter.build",
                "title": "Build",
                "category": "Porter"
            }
        ],
        "configuration": {
            "title": "Porter",
            "properties": {
                "vscode-porter": {
                    "description": "Porter extension configuration",
                    "type": "object",
                    "properties": {
                        "porter-path": {
                            "type": "string",
                            "description": "File path to a porter binary"
                        }
                    }
                }
            }
        }
    },
    "scripts": {
        "vscode:prepublish": "npm run compile",
        "compile": "tsc -p ./",
        "watch": "tsc -watch -p ./",
        "postinstall": "node ./node_modules/vscode/bin/install",
        "test": "npm run compile && node ./node_modules/vscode/bin/test"
    },
    "extensionDependencies": [
        "redhat.vscode-yaml"
    ],
    "dependencies": {
        "@types/shelljs": "^0.8.1",
        "mkdirp": "^0.5.1",
        "shelljs": "^0.8.3",
        "tmp": "^0.0.33"
    },
    "devDependencies": {
        "@types/mkdirp": "^0.5.2",
        "@types/mocha": "^2.2.42",
        "@types/node": "10.12.25",
        "@types/tmp": "0.0.33",
        "tslint": "^5.8.0",
        "typescript": "^2.6.1",
        "vscode": "^1.1.6"
    },
    "repository": {
        "type": "git",
        "url": "https://github.com/deislabs/porter-vscode"
    }
}
